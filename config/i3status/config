general {
        colors = true
        color_good = "#FFFFFF"
        color_degraded = "#FFFFFF"
        color_bad = "#F2777A"
        interval = 5
}

order += "wireless _first_"
order += "tztime local"

wireless _first_ {
        format_up = "%quality %ip"
        format_down = ""
}

tztime local {
        format = "%d.%m. %H:%M "
}
