#!/usr/bin/env bash

# update-rust-analyzer - Helper script to get the latest version of rust-analyzer

mkdir -p ~/.local/bin
echo "Download latest release for Linux .."
curl --silent -L https://github.com/rust-analyzer/rust-analyzer/releases/latest/download/rust-analyzer-x86_64-unknown-linux-gnu.gz | gunzip -c - > ~/.local/bin/rust-analyzer
chmod +x ~/.local/bin/rust-analyzer

echo "Updated $(rust-analyzer --version) successfully."
