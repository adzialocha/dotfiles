#!/usr/bin/env bash

# notes - Search files the notes folder via fzf

set -e

target_dir="$HOME/documents/notes"

main() {
  previous_file="$1"
  file_to_edit=`select_file $previous_file`
  file_path="$target_dir/$file_to_edit"

  if [ -n "$file_path" ] ; then
    "$EDITOR" "$file_path"
    exit
  fi
}

select_file() {
  given_file="$1"
  ls $target_dir | fzf --preview="bat --style=numbers --color=always $target_dir/{}" --preview-window=right:70%:wrap --query="$given_file"
}

main ""
